# ===========================================
# 统一环境变量配置示例
# ===========================================

# 项目基础配置
COMPOSE_PROJECT_NAME=moonshot
COMPOSE_PROFILES=

# 数据库配置
POSTGRES_DB=moonshot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=moonshot123
POSTGRES_HOST_AUTH_METHOD=md5

# Redis配置
REDIS_PASSWORD=

# MinIO配置  
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# API服务配置
API_PORT=8080
GIN_MODE=release
DEBUG=false

# 工作节点配置
RULE_WORKER_REPLICAS=2
AI_WORKER_REPLICAS=1

# AI服务配置
KIMI_API_KEY=your_kimi_api_key_here

# LLM服务配置
LLM_SERVICE_PORT=8090
LLM_SERVICE_EXTERNAL_PORT=8090
LLM_MAX_WORKERS=10
LLM_MAX_QUEUE_SIZE=1000
LLM_TASK_TIMEOUT=5m
LLM_ENABLE_CORS=true
LLM_ENABLE_WEBSOCKET=true
LLM_ENABLE_METRICS=true
LLM_AUTH_TOKEN=your_llm_auth_token_here
LLM_ENABLE_DEBUG=false
LLM_SERVICE_CPU_LIMIT=2
LLM_SERVICE_MEMORY_LIMIT=1G
LLM_SERVICE_CPU_RESERVATION=0.5
LLM_SERVICE_MEMORY_RESERVATION=256M

# 向量数据库配置 (Milvus)
ETCD_PORT=2379
ETCD_CLIENT_PORT=23379
MINIO_PORT=9000
MINIO_ADMIN_PORT=9001
MILVUS_PORT=19530
MILVUS_HTTP_PORT=9091

# 监控配置
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=200h

# 网络配置
NETWORK_NAME=moonshot-network

# 端口映射配置
# 基础设施
POSTGRES_EXTERNAL_PORT=5432
REDIS_EXTERNAL_PORT=6379
MINIO_EXTERNAL_PORT=29000
MINIO_CONSOLE_EXTERNAL_PORT=29001

# 应用服务
API_EXTERNAL_PORT=8080
PDF_VALIDATOR_EXTERNAL_PORT=8001
LLM_SERVICE_EXTERNAL_PORT=8090
FLOWER_EXTERNAL_PORT=5555

# 监控服务
GRAFANA_EXTERNAL_PORT=3000
PROMETHEUS_EXTERNAL_PORT=9090
LOKI_EXTERNAL_PORT=3100

# 向量数据库
ETCD_EXTERNAL_PORT=23379
MILVUS_EXTERNAL_PORT=29530
MILVUS_HTTP_EXTERNAL_PORT=29091

# SSL配置
SSL_ENABLED=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# 系统配置
HOSTNAME=localhost
DOMAIN_NAME=localhost
TZ=Asia/Shanghai
PROJECT_ROOT=../../..